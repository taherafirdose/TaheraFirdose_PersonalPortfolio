<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-new-6" style="border:lightblue; border-width:2px; border-style:solid;">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Full Name"
                    name="contact_name" required>
                </div>

                <div class="form-group">
                    <label for="NumberTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the Contact Number"
                    name="contact_number" required>
                </div>

                <div class="form-group">
                    <label for="EmailTextField">Email ID</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the email address"
                    name="email_address" required>
                </div>               

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/businesscontact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

 



